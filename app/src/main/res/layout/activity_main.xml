<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="display.samsung.workplace.RelativeLayoutctivity">

        <Button
                android:id="@+id/startCaptureBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/take_pic_btn_label" android:layout_alignParentStart="true"
                android:layout_marginStart="12dp" android:layout_alignParentTop="true"
                android:layout_marginTop="124dp"/>
        <ToggleButton
                android:id="@+id/video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video"
                android:layout_alignParentTop="true" android:layout_marginTop="192dp"
                android:layout_alignStart="@+id/startCaptureBtn"/>
        <ToggleButton
                android:id="@+id/photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photo"
                android:layout_alignParentStart="true" android:layout_marginStart="115dp"
                android:layout_alignTop="@+id/video"/>
        <Button
                android:id="@+id/encrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video"
                android:layout_alignTop="@+id/decrypt" android:layout_alignStart="@+id/photo"/>
        <Button
                android:id="@+id/decrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photo"
                android:layout_alignParentBottom="true" android:layout_marginBottom="189dp"
                android:layout_alignStart="@+id/startCaptureBtn"/>

    </RelativeLayout>
</ScrollView>